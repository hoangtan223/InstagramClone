<div class="modal fade" id="new-photo-modal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Upload Photo</h4>
			</div>
			<% if user_signed_in? %>
			<!-- <form class="form-horizontal" action="/questions" method="POST"> -->
			<%= form_for :photo, url: '/photos', html: { class: 'form-horizontal'} do %>
			<input type="hidden" name="photo[user_id]" value="<%= current_user.id %>"></input>
				<div class="modal-body">
					<div class="form-group">
						<label for="image" class="col-sm-2 control-label">Image</label>
						<div class="col-sm-10">
							<input type="text" name="photo[image]" class="form-control" id="image" placeholder="Image URL"  required>
						</div>
					</div>
					<div class="form-group">
						<label for="caption" class="col-sm-2 control-label">Photo caption</label>
						<div class="col-sm-10">
							<textarea class="form-control" name="photo[caption]" id="caption" placeholder="Add your caption" required></textarea>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Upload</button>
				</div>
			<% end %>
			<% end %>
		</div>
	</div>
</div>